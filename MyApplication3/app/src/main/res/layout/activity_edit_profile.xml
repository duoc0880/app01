<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad_bg"
    tools:context=".TramAnhDetails">
    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView_avatar"
                android:src="@drawable/ic_account_drawer"
                android:layout_width="120dp"
                android:layout_height="120dp">
            </ImageView>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/edittextfullname"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fullname"
                android:textSize="30sp"
                android:textColor="@color/white">

            </EditText>

        </LinearLayout>
        <LinearLayout

            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/mail"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="5dp"

                    android:layout_width="30dp"
                    android:layout_height="50dp">

                </ImageView>
                <EditText
                    android:id="@+id/edittextviewemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:text="email"
                    android:textSize="20sp"
                    android:textColor="@color/white"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/phone"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="50dp">
                </ImageView>
                <EditText
                    android:id="@+id/edittextviewphone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:text="phone"
                    android:textSize="20sp"
                    android:textColor="@color/white"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/local"

                    android:layout_marginLeft="15dp"
                    android:paddingLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="50dp">
                </ImageView>
                <EditText
                    android:id="@+id/edittextadress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:text="Adress"
                    android:textSize="20sp"
                    android:textColor="@color/white"></EditText>

            </LinearLayout>

            <Button
                android:id="@+id/button_edit_save"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="done"
                android:background="@drawable/custorm_vien_white"
                ></Button>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>