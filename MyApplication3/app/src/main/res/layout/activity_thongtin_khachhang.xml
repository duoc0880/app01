<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".ThongtinKhachhang">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        >

    </ImageView>

    <EditText
        android:id="@+id/edittexttenkhachhang"
        android:hint="Nhap ho ten"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <EditText
        android:id="@+id/edittextsodienthoai"
        android:hint="Nhap so dien thoai"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <EditText
        android:id="@+id/edittextadress"
        android:hint="Nhap email"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <Button
        android:id="@+id/buttonxacnhan"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custorm_vien_white"
        android:text="Xac Nhan"
        android:textColor="@color/white"></Button>
    <Button
        android:id="@+id/buttontrove"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="TRO VE"
        android:textColor="@color/white"
        android:background="@drawable/custorm_vien_white"
        >
    </Button>

</LinearLayout>