<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_details"
    android:orientation="vertical"
    android:background="@drawable/grad_bg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        app:title="Chi Tiet San Pham"
        app:titleTextColor="@color/white"
        android:background="@drawable/grad_bg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgchitietsanpham"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textviewtenchitietsanpham"
                android:text="Ten San pham"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/textviewgiachitietsanpham"
                android:text="Gia"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <Spinner
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/spiner"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/buttonmuahang"
                android:text="Them vao gio hang"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/custorm_vien_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Mo ta san pham"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewmotachitietsanpham"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </ScrollView>

    </LinearLayout>

</LinearLayout>